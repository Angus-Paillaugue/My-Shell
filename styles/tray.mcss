/* Context menu */
menu {
  background-color: var(--shadow);
  border: 2px solid var(--surface);
  padding: {{PADDING/2}};
}

menu > menuitem {
  border-radius: {{BORDER_RADIUS}};
  padding: {{PADDING * 0.8}}
    {{PADDING * 1.2}};
}

menu > menuitem:hover {
  background-color: var(--surface);
}
menu > menuitem:hover label {
  color: var(--primary);
}
