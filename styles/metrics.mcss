#metrics-main-box {
  font-weight: bold;
  padding: 0 {{PADDING * 1.2}};
}
#metrics-main-box.vertical {
  padding: {{PADDING * 1.2}} 0;
}

#ram-label {
  font-size: {{FONT_SIZE * 0.9}};
}
.metrics-progress-bar {
  color: var(--surface-bright);
  border: 3px solid var(--primary);
}
.metrics-progress-bar.warning {
  border: 3px solid var(--yellow-dim);
}
.metrics-progress-bar.danger {
  border: 3px solid var(--red-dim);
}
